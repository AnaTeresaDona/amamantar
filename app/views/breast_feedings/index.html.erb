<p id="notice"><%= notice %></p>

<h1>Registro de Amamantamiento</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Duración</th>
      <th>Infante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breast_feedings.each do |breast_feeding| %>
      <tr>
        <td><%= breast_feeding.quantity %></td>
        <td><%= breast_feeding.duration %></td>
        <td><%= breast_feeding.baby %></td>
        <td><%= link_to 'Mostrar', breast_feeding %></td>
        <td><%= link_to 'Editar', edit_breast_feeding_path(breast_feeding) %></td>
        <td><%= link_to 'Destruir', breast_feeding, method: :delete, data: { confirm: '¿Estás segura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo registro de amamantamiento', new_breast_feeding_path %>
