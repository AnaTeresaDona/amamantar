<p id="notice"><%= notice %></p>

<h1>Registro Bebés</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad Total</th>
      <th>Tiempo Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @babies.each do |baby| %>
      <tr>
        <td><%= baby.name %></td>
        <td><%= baby.total_drinking %></td>
        <td><%= baby.total_duration %></td>
        <td><%= link_to 'Mostrar', baby %></td>
        <td><%= link_to 'Editar', edit_baby_path(baby) %></td>
        <td><%= link_to 'Destruir', baby, method: :delete, data: { confirm: 'Confirmar' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo bebé', new_baby_path %>
